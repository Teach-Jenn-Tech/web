---
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";
import { getBlog } from "~/data/blog/index"

const sites = await getBlog();
---
<ContentSection title="Blog" id="blog">
<Fragment slot="lead">
<span class="text-primary">Technical</span>.{" "}
    <span class="text-primary">Creative</span>. {" "}
    <span class="text-primary">Editor</span>.
</Fragment>
<div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
    {sites.map((site) => <ShowcaseCard site={site} />)}
    </div>
</div>
</ContentSection>
