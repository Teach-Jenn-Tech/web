---
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";
import { getCode } from "~/data/code/index"

const sites = await getCode();
---
<ContentSection title="Code" id="code">
  <Fragment slot="lead">
<span class="text-primary">React</span>.{" "}
    <span class="text-primary">TypeScript</span>. {" "}
    <span class="text-primary">Python</span>.
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {sites.map((site) => <ShowcaseCard site={site} />)}
    </div>
  </div>
</ContentSection>
